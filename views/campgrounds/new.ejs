<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Create a new campground</h1>
		<div style="width: 35%; margin: 25px auto;"> <!-- chenge width of form input -->
			<form method="POST" action="/campgrounds">
				<div class="form-group"> <!-- to give space between form input -->
					<input class="form-control" type="text" placeholder="campground name" name="name" >	
				</div>
				<div class="form-group">
					<input class="form-control" type="number" placeholder="price" name="price" min="0.01" step="0.01">	
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="image url" name="image">	
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="description" name="description">	
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-block">submit</button>
				</div>
				<a href="/campgrounds">Go Back</a>
			</form>	
		</div>
	</div>
</div>

<% include ../partials/footer %>